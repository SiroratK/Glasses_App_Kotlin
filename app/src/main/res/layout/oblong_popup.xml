<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


    <androidx.cardview.widget.CardView
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="หน้าทรงยาว"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            <TextView
                    android:id="@+id/descriptionText"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="คนที่มีใบหน้ายาว ควรจะเลือกแว่นที่มีลักษณะกรอบแว่นหนา และมีรูปทรงแบบเรขาคณิต เช่น ทรงสี่เหลี่ยม สามเหลี่ยม หรืออาจจะเป็นแว่นทรงกลมก็ได้ จะช่วยลดความยาวของใบหน้าได้ดี ช่วยให้รูปหน้าดูมีความสมดุลมากยิ่งขึ้น"/>

            <Button
                    android:id="@+id/textOk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="OK"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>