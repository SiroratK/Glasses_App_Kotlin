<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       xmlns:tools="http://schemas.android.com/tools"
       app:behavior_hideable="false"
       app:behavior_peekHeight="200dp"
       app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
       android:layout_width="match_parent"
       android:layout_height="150dp"
        android:id="@+id/bottom_sheet">

    <Button
            android:id="@+id/circle_button"
            android:onClick="cameraFaceDetection"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_photo_camera"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.222"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:text="Camera"
            app:layout_constraintEnd_toEndOf="@id/circle_button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle_button"
            android:gravity="center"/>

    <Button
            android:id="@+id/circle_button2"
            android:onClick="galleryFaceDetection"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/circular_button"
            android:drawableTop="@drawable/ic_photo_50dp"
            android:paddingTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:text="Image"
            app:layout_constraintEnd_toEndOf="@id/circle_button2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circle_button"
            android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>