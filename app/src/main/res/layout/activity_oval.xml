<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include layout="@layout/image_detect_mlkit"/>
    <ImageView
            android:id="@+id/ovalpopup_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:src="@drawable/ic_lightbulb_outline"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/oval_1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/glass3_btn"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/darker_gray"
                    />

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/oval_2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/glass2_btn"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/darker_gray"

                    />

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/oval_3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/glass1_btn"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@android:color/darker_gray"
                    />
        </LinearLayout>
    </HorizontalScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>