<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">


    <androidx.cardview.widget.CardView
            android:layout_marginVertical="15dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">

        <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/titleText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หน้าทรงหัวใจ"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="10dp"/>
            <TextView
                    android:id="@+id/descriptionText"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="คนที่มีใบหน้าทรงหัวใจไม่ควรใส่แว่นทรงหยดน้ำหรือแว่นขนาดใหญ่ๆที่จะทำให้หน้าผากดูกว้างยิ่งขึ้น แว่นทรงกลมหรือทรงรีจะช่วยสร้างสมดุลให้ใบหน้าได้ดีกว่า"/>

            <Button
                    android:id="@+id/textOk"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="OK"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>